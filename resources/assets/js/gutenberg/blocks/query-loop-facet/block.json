{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "meiliscout/query-loop-facet",
    "version": "0.1.0",
    "title": "Query Loop Facet",
    "category": "text",
    "icon": "smiley",
    "description": "Add faceted search filters to your Query Loop block.",
    "example": {},
    "supports": {
        "html": false,
        "inserter": true
    },
    "attributes": {
        "targetQueryId": {
            "type": "string",
            "default": ""
        },
        "facetType": {
            "type": "string",
            "default": "checkbox"
        },
        "facetAttribute": {
            "type": "string",
            "default": ""
        },
        "filterType": {
            "type": "string",
            "default": "taxonomy",
            "enum": ["taxonomy", "meta"]
        },
        "label": {
            "type": "string",
            "default": ""
        },
        "showEmptyValues": {
            "type": "boolean",
            "default": false
        }
    },
    "textdomain": "meiliscout",
    "editorScript": "file:./index.jsx",
    "render": "file:./render.php"
}
